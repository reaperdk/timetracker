<Window x:Class="TimeTrakcer.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="250*"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding Greetings}" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1"></Label>
        <ListView DataContext="{Binding AllTasks}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="209" Margin="45,48,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="111"/>
    </Grid>
</Window>
